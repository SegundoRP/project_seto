<%= form_with model: @patient do |f| %>
  <%= f.label 'Nombre' %>
  <%= f.text_field :first_name %>
  <%= f.label 'Apellidos' %>
  <%= f.text_field :last_name %>
  <%= f.label 'Edad' %>
  <%= f.text_field :age %>
  <%= f.label 'Email' %>
  <%= f.text_field :email %>
  <%= f.label 'Dirección' %>
  <%= f.text_field :address %>
  <%= f.label 'Teléfono' %>
  <%= f.text_field :phone %>
  <%= f.submit 'Crear' %>

  <% if current_page?(new_patient_path) %>
    <%= f.fields_for :consultations do |c| %>
      <%= c.text_field :date %>
    <% end %>
  <% end %>
<% end %>
