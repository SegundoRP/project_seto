<main>
  <div>
    <%= link_to "Agregar paciente", new_patient_path %>
  </div>

  <div>
    <a>Agendar consulta</a>
  </div>

  <div class="row">
    <div class="col-10 col-sm-8 col-md-8 col-lg-6">
      <table>
        <tr>
          <thead>Id</thead>
          <thead>Nombre</thead>
          <thead>Edad</thead>
          <thead>Tel√©fono</thead>
          <thead colspan="2">Acciones</thead>
        </tr>
        <% @patients.each do |patient| %>
        <tr>
          <td><%= patient.id %></td>
          <td><%= patient.fullname %></td>
          <td><%= patient.age %></td>
          <td><%= patient.phone %></td>
          <td><%= link_to 'Editar', edit_patient_path(patient) %></td>
        </tr>
        <% end %>
      </table>
    </div>
