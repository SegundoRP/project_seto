<%= form_with model: @doctor do |f| %>
  <%= f.label 'Nombre' %>
  <%= f.text_field :first_name %>
  <%= f.label 'Apellidos' %>
  <%= f.text_field :last_name %>
  <%= f.label 'Edad' %>
  <%= f.text_field :age %>
  <%= f.label 'Email' %>
  <%= f.text_field :email %>
  <%= f.label 'Dirección' %>
  <%= f.text_field :address %>
  <%= f.label 'Teléfono' %>
  <%= f.text_field :phone %>

  <% if current_page?(new_doctor_path) %>
    <%= link_to_add_fields "Agregar Consulta", f, :consultations %>
  <% end %>
  <%= f.submit current_page?(new_doctor_path) ? 'Crear' : 'Editar' %>
<% end %>
