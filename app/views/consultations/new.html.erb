<h1>Nueva consulta</h1>

<%= form_with model: @consultations do |f| %>
  <%= f.date_select :date %>
  <%= f.text_field :status %>
  <%= f.text_field :summary %>
  <%= f.text_field :reason_consultation %>
  <%= f.collection_select :patient, Patient.order(:first_name), :id, :first_name, include_blank: true %>
  <%= f.collection_select :doctor, Doctor.order(:first_name), :id, :first_name, include_blank: true %>
  <%= f.collection_select :type_of_service, TypeOfService.order(:name_of_service), :id, :name_of_service, include_blank: true %>
<% end %>
